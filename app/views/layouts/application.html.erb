<!DOCTYPE html>
<html>
  <head>
    <title>Codeconquest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <nav class="navbar  navbar-expand-sm navbar-dark bg-dark ">
		<div class="container">

			<svg id="logo-svg" viewBox="0 0 240.4 240.4" width="50" height="50" class="d-inline-block align-top">
				<polygon class="polymorph" points="105.5,172.4 0,142.7 174.8,146.1 114.8,240.4 171.9,70.1 240.4,158 100.9,49.4 203.2,9.4 59.9,112.6 54.6,0 " />
			</svg>
			<% if user_signed_in? %>
				<a class="navbar-brand" href="/">Welcome! <%= current_user.first_name %></a>
			<% else %>
				<a class="navbar-brand" href="/">Code Conquest</a>
			<% end %>

			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
				aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<%= link_to root_path, class: 'nav-link' do %>
							<i class="fas fa-home"></i> Home
						<% end %>
					</li>
					<% if user_signed_in? %>
            <% if current_user.approved_student%>
             <li class="nav-item">
                <%= link_to drill_groups_path, class: 'nav-link' do %>
                  <i class="fas fa-plus"></i> New Post
                <% end %>
              </li>
            <% end %>
						<% if current_user.admin %>
							 <li class="nav-item">
                <%= link_to new_drill_group_path, class: 'nav-link' do %>
                  <i class="fas fa-plus"></i> New Drill Group
                <% end %>
              </li>
						<% end %>
						<li class="nav-item">
							<%= link_to session_path, method: :delete, class: 'nav-link' do %>
								<i class="fas fa-sign-out-alt"></i> Sign Out
							<% end %>
						</li>
					<% else %>
						<li class="nav-item">
							<%= link_to new_session_path, class: 'nav-link' do %>
								<i class="fas fa-sign-in-alt"></i> Sign in
							<% end %>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>
    <%= yield %>
  </body>
</html>
