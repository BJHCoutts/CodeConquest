<div class="container mt-4">
	<h1 class="display-4">Your transcript for '<%= @drill.title %>'</h1>
  <p class="lead"><%= @drill.description %></p>
  
	<hr class="my-4">

  <% @questions.each_with_index  do |q, index|%>
    <% if index.in? @correct_questions %>
      <div class="form-group alert-success">
        <div class="mb-3">
        <p class="lead" style="font-size:0.9rem"><%= index + 1  %>. <%= q.body  %></p>
        </div>
        <% q.options.each do |option| %>
          <div class="custom-control custom-radio">
            <input type="radio" id="<%= q.body %>-<%=option%>" name="<%= index %>" class="custom-control-input" value="<%=option%>">
            <label class="custom-control-label" for="<%= q.body %>-<%=option%>"><%=option%></label>
          </div>
        <% end %>
      <div>
    <% else %>
      <div class="form-group alert-danger">
        <div class="mb-3">
        <p class="lead" style="font-size:0.9rem"><%= index + 1  %>. <%= q.body  %></p>
        </div>
        <% q.options.each do |option| %>
          <div class="custom-control custom-radio">
            <input type="radio" id="<%= q.body %>-<%=option%>" name="<%= index %>" class="custom-control-input" value="<%=option%>">
            <label class="custom-control-label" for="<%= q.body %>-<%=option%>"><%=option%></label>
          </div>
        <% end %>
      <div>
    <% end %>
    <hr class="my-4">
  <% end %>
</div>