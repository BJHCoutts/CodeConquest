
<div class="container mt-4">
  <h1 class="display-4">
    New Drill
  </h1>
  <%= simple_form_for [@drill_group, @drill], :from => { class: 'input-group' }  do |f| %>
    <div class="form-group">
      <div class="floating-label">
        <%= f.input :title, input_html: { class: 'form-control' },  required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="floating-label">
        <%= f.input :description, input_html: { class: 'form-control' },  required: true %>
      </div>
    </div>
    
    <div class="d-flex flex-wrap mb-4" style="justify-content: space-evenly"> 
      <% ["Beginner", "Intermediate", "Advanced"].each do |level| %>
        <div class="custom-control custom-radio custom-control-inline mr-2 pl-4">
          <input type="radio" id="customRadioInline<%= level %>" name="difficulty" class="custom-control-input" value="<%=level%>">
          <label class="custom-control-label" for="customRadioInline<%= level %>"><%=level%></label>
        </div>
      <% end %>
    </div>
    <input class="btn btn-primary" type="submit" value="Create">
  <% end %>
</div>