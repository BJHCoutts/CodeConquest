<div class="container mt-4">
  <h1 class="display-4">
    Drill Groups
  </h1>
  <div class="d-flex justify-content-end mb-4">
  <% if current_user.admin %>
    <a href="<%= new_drill_group_path %>" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">
      New Drill Group
    </a>
  <% end %>
  </div>
  <ul class="list-group">
    <% @drill_groups.each do |drill_group| %>
      <a href="<%=drill_group_path(drill_group)%>" 
         class="list-group-item list-group-item-action flex-column align-items-start"
      >
        <%= drill_group.title %>
        <span class="badge badge-primary badge-pill"><%= drill_group.drills.count %></span>
      </a>
    <% end %>
  </ul>
</div>